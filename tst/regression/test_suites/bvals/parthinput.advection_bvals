<parthenon/job>
problem_id = advection

<parthenon/mesh>
refinement = none
nghost = 2

nx1 = 20
x1min = -0.5
x1max = 0.5
ix1_bc = reflecting
ox1_bc = reflecting

nx2 = 20
x2min = -0.5
x2max = 0.5
ix2_bc = reflecting
ox2_bc = reflecting

nx3 = 20
x3min = -0.5
x3max = 0.5
ix3_bc = reflecting
ox3_bc = reflecting

<parthenon/meshblock>
nx1 = 10
nx2 = 10
nx3 = 10

<parthenon/time>
nlim = 40
tlim = 10.0
integrator = rk1

<Advection>
cfl = 1.0 # explicitly using cfl=1 here making advection exact (no numerical diffusion)
vx = 1.0
vy = 1.0
vz = 1.0
profile = block
v_const = false

compute_error = false
num_vars = 1             # number of variables
vec_size = 1             # size of each variable
fill_derived = false     # whether to fill one-copy test vars
buffer_send_pack = true  # send all buffers using packs
buffer_recv_pack = true  # receive buffers using packs
buffer_set_pack = true   # set received buffers using packs
buffer_restrict_pack = false

<parthenon/output0>
file_type = hdf5
dt = 0.5
variables = advected, v
id = reflecting
