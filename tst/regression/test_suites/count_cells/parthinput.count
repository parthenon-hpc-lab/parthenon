<parthenon/job>
problem_id = count_cells

<parthenon/mesh>
refinement = adaptive
numlevel = 6

nx1 = 64
x1min = -1
x1max = 1
ix1_bc = periodic
ox1_bc = periodic

nx2 = 64
x2min = -1
x2max = 1
ix2_bc = periodic
ox2_bc = periodic

nx3 = 64
x3min = -1
x3max = 1
ix3_bc = periodic
ox3_bc = periodic

<parthenon/meshblock>
nx1 = 32
nx2 = 32
nx3 = 32

<count_cells>
# AMR tries to resolve a sphere of a given radius
# with a dx of dx_target in each direction.
# It will do the best it can given the number of levels
# requested.
sphere_radius = 0.25
dx1_target = 0.001
dx2_target = 0.001
dx3_target = 0.001

# Change to true to save cell count to a file.
save_to_file = true
filename = cell_count.txt
