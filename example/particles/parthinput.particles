<parthenon/job>
problem_id = particles

<parthenon/mesh>
refinement = none

nx1 = 16
x1min = -0.5
x1max = 0.5
ix1_bc = periodic
ox1_bc = periodic

nx2 = 16
x2min = -0.5
x2max = 0.5
ix2_bc = periodic
ox2_bc = periodic

nx3 = 1
x3min = -0.5
x3max = 0.5
ix3_bc = periodic
ox3_bc = periodic

<parthenon/meshblock>
nx1 = 8
nx2 = 8

<parthenon/output0>
file_type = hdf5
dt = 1.e1
variables = particle_deposition

<parthenon/time>
tlim = 1.e2
integrator = rk1

<Particles>
num_particles = 10
particle_speed = 1.0
rng_seed = 23487
const_dt = 0.5
deposition_method = per_cell
destroy_particles_frac = 0.1
defrag_threshold = 0.9
